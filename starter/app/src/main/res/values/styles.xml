<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Add necessary styles -->
    <!-- Text style -->

    <style name="button_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_padding</item>
        <item name="android:layout_marginEnd">@dimen/default_padding</item>
    </style>

    <style name="social_media_pic_size">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="profile_pic_style">
        <item name="android:layout_width">67dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_marginStart">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
    </style>

    <!-- Margin style -->

</resources>
